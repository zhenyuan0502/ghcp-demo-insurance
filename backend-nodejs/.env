# Database Configuration
# Choose between 'sqlite' or 'postgresql'
DATABASE_TYPE=sqlite

# SQLite Configuration
SQLITE_DATABASE_URL=sqlite:///instance/insurance.db

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=insurance_db
POSTGRES_USER=insurance_user
POSTGRES_PASSWORD=insurance_password

# Application Configuration
NODE_ENV=development
PORT=5000

# Constructed DATABASE_URL (will be set automatically based on DATABASE_TYPE)
# DATABASE_URL will be set in the application based on DATABASE_TYPE
